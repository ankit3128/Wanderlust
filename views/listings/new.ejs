<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-md-8 offset-1">
<body>
    <br><br>
     <h3> Add your houses here</h3>
     <br><br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
  <div class="md-3">
     <label for="title" class="form-label">Title</label>
        <input name="title" 
        placeholder="Add a catchy title" 
        type="text" 
        class="form-control"
        required>
         <div class="valid-feedback">
            Title  Looks good!
         </div>
  </div>
    
  <div class="md-3">
     <label for="description" class="form-label">description</label>
     <textarea name="description"  
     
     class="form-control" required></textarea>
     <div class="invalid-feedback">
      please enter a vallid description
    </div>
  </div>
  <!-- <div class="md-3">
     <label for="image" class="form-label">image</label>
    
        <input name="image[url]" placeholder="enter image url/links" 
        type="text"
        class="form-control">
       
  </div> -->
    <div class="md-3">
     <label for="image" class="form-label"> upload image</label>
    
        <input name="listing[image]" placeholder="put the image here" 
        type="file"
        class="form-control">
          required
  </div>
 <div class="row">
    <div class="md-3 col-md-4">
        <label for="price" class="form-label">price</label>
     <input type="number" name="price" placeholder="1800 "  
    
     class="form-control" 
     required>
      <div class="invalid-feedback">
      price should be in vallid form 
    </div>

  </div>
   
  <div class="md-3 col-md-8">
   <label for="country" class="form-label">country</label>
       <input  name="country" placeholder="INDIA " type="text" class="form-control" required >
   <div class="invalid-feedback">
      please enter a vallid country
    </div>
      </div>
  

 </div>
 
  
  <div class="md-3">
    <label for="location" class="form-label">location</label>
    <input  name="location" placeholder="varanasi,jaipur " type="text" class="form-control" required>
  <div class="invalid-feedback">
      please enter a vallid location
    </div>

   </div>
<br><br><br>

 <button class="btn btn-dark add-btn">add</button>
 <br><br>
    </form>
    
</body>
</div>
</div>
