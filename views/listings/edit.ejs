<% layout("/layouts/boilerplate") %>
<div class="row  mt-3">
    <div class="col-8 offset-2">

 

    <h3>Edit your Listings here</h3>

    <form  method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"  enctype="multipart/form-data">
        

         <div class="md-3">
     <label for="title" class="form-label">Title</label>
        <input name="title"   value="<%= listing.title %>" type="text" 
        class="form-control" required>
      <div class="valid-feedback">
            Title  Looks good!
      </div>
  </div>
    
  <div class="md-3">
     <label for="description" class="form-label">description</label>
     <textarea name="description"
     class="form-control" required> <%= listing.description %> </textarea>
      <div class="invalid-feedback">
           change the description as much you want
         </div>
  </div>
  <!--  -->
  <div class="mb-3">Original Listing Image</div>
<img src="<%= originalImageUrl %>" alt="Original Listing Image" style="max-width:200px; height:auto;">

  <div class="md-3">
     <label for="image" class="form-label">upload new image link </label>
    
        <input name="listing[image]" value="<%= listing.image.url %> "
        type="file"
        class="form-control" required>
      <div class="invalid-feedback">
           please change the image
         </div>
       
  </div>
 <div class="row">
    <div class="md-3 col-md-4">
        <label for="price" class="form-label">price</label>
     <input  name="price" value="<%= listing.price %>" type="number" 
     class="form-control" required>
         <div class="invalid-feedback">
            change the price 
         </div>

  </div>
   
  <div class="md-3 col-md-8">
   <label for="country" class="form-label">country</label>
       <input  name="country" value="<%= listing.country %>" type="text" 
       class="form-control" required>
                <div class="invalid-feedback">
           change your country
         </div>
  </div>

 </div>
 
  
  <div class="md-3">
    <label for="location" class="form-label">location</label>
    <input  name="location" value="<%= listing.location %>" type="text" 
    class="form-control" required>
             <div class="invalid-feedback">
            change the location
         </div>
  </div>

        <button type="submit" class="btn btn-dark  mt-4  edit-btn">Edit</button>
    </form>

   </div>
</div>


